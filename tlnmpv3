z]*"; f_c "[A-Z]*"; mv V/* .; mv wp-config-sample.php wp-config.php; rm -rf {V,1}; word=$(curl -L https://api.wordpress.org/secret-key/1.1/salt/); defineString='put your unique phrase here'
printf '%s\n' "g/$defineString/d" a "$word" . w | ed -s wp-config.php; sed -i "s/database_name_here/$V/; s/username_here/$V/; s/password_here/$ppasswd/" "wp-config.php"; cd wp-content/themes
wget toe.us.to/320; unzip 320; rm 320; p_i "  Done installing Wordpress for $V"; s3; }; if [ ! -e ~/.lnmpv ]; then apt-get update; u_n; apt-get install lsb-release -y; DISTRO=`lsb_release -i \
-s`; RELEASE=`lsb_release -c -s`; rm -rf /etc/apt/sources.list; u_h; u_d; mkdir ~/.lnmpv; fi; p_i ""; clear; echo "############################################################################\
