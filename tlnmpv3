stall LNMP? [y/n]: " -n 1 -r; if [[ $REPLY =~ ^[Yy]$ ]]; then r_5; r_m; r_x; r_4; rm -rf ~/.my.cnf ~/.lnmpv/.lnmp; p_i "  Done uninstalling LNMP"; s3; t; else ab; s3; t; fi; fi; if [ ! -e ~/.\
